<%- include('head') -%>
  <%- include('header') -%>
  <main class="c-backdrop c-backdrop--small">
    <header class="c-title-block">
      <div class="c-title-block__content">
        <div class="c-title">
         <h1 class="c-title__heading"><span class="c-title-block__heading"><%= title %></span></h1>
          <%
          if (locals.date) {
            var d = new Date(date);
          %>
            <small class="c-title__sub">
              Posted on <time datetime="<%= d.toISOString().split('T')[0] %>"><%= moment(d).format('dddd, MMMM Do, YYYY') %></time>
            </small>
          <% } %>
        </div>
      </div>
    </header>
    <div class="c-content">
      <div class="s-post">

        <%- contents -%>

        <hr>
        <p>Share this on: <a href="http://www.twitter.com/share?url=<%- sitename + url %>&text=<%- title %>">Twitter</a> | <a href="https://plus.google.com/share?url=<%- sitename + url %>">Google+</a></p>
      </div>
    </div>
  </main>
<%- include('footer') -%>
